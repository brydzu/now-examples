{
	"private": true,
	"name": "preact-ssr",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"postinstall": "patch-package",
		"start": "per-env",
		"start:production": "npm run -s serve",
		"start:development": "npm run -s dev",
		"build": "preact build --prerenderUrls prerender-urls.json --template template.html",
		"now-build": "npm run build",
		"serve": "npm run build && now-lambda",
		"dev": "preact watch",
		"lint": "eslint src",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,html,graphql}\"",
		"test": "jest",
		"download-schema": "npx get-graphql-schema https://graphql-pokemon.now.sh > schema.graphql"
	},
	"eslintConfig": {
		"extends": [
			"eslint-config-synacor",
			"prettier",
			"prettier/react"
		],
		"settings": {
			"react": {
				"createClass": "Component",
				"pragma": "h",
				"version": "15.0"
			}
		}
	},
	"eslintIgnore": [
		"build/*",
		"schema.graphql"
	],
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"semi": true,
		"useTabs": true,
		"singleQuote": true,
		"endOfLine": "lf"
	},
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "^7.3.0",
		"@grafoo/babel-plugin": "^1.4.1",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"eslint": "^5.14.1",
		"eslint-config-prettier": "4.1.0",
		"eslint-config-synacor": "^3.0.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^24.1.0",
		"now-lambda-runner": "^3.3.0",
		"patch-package": "^6.0.5",
		"per-env": "^1.0.2",
		"preact-cli": "^2.2.1",
		"preact-render-spy": "^1.2.1",
		"prettier": "1.16.4"
	},
	"dependencies": {
		"@grafoo/core": "^1.4.1",
		"@grafoo/preact": "^1.4.1",
		"isomorphic-fetch": "^2.2.1",
		"preact": "^8.2.6",
		"preact-compat": "^3.17.0",
		"preact-render-to-string": "^4.1.0",
		"preact-router": "^2.5.7"
	},
	"jest": {
		"verbose": true,
		"setupFiles": [
			"<rootDir>/tests/__mocks__/browserMocks.js"
		],
		"testRegex": "(/(__tests__|tests)/.*|(\\.|/)(test|spec))\\.jsx?$",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"<rootDir>/tests/__mocks__/*"
		],
		"testURL": "http://localhost:8080",
		"moduleFileExtensions": [
			"js",
			"jsx"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
			"\\.(css|less|scss)$": "identity-obj-proxy",
			"^./style$": "identity-obj-proxy",
			"^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
			"^react$": "preact-compat",
			"^react-dom$": "preact-compat",
			"^create-react-class$": "preact-compat/lib/create-react-class",
			"^react-addons-css-transition-group$": "preact-css-transition-group"
		}
	}
}
